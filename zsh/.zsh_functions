#!/bin/zsh

# apt unattended quiet install
function aptinstall() {
    export NEEDRESTART_MODE=a 
    export DEBIAN_FRONTEND=noninteractive
    aptopt='-qq'
    filter='^NEEDRESTART|^update|Reading|^\s*$'
    sudo $envopt apt-get install $aptopt $@ | grep -Ev $filter
}

# Execute external script
function extscript() {
    /bin/bash -c "$(curl -fsSL $1)"
}

# Source external file
function extsource() {
    source /dev/stdin <<< "$(curl -fsSL $1)"
}

# Display OS name
function osname() {
    if [[ -f /etc/os-release ]]; then
        osid=$(cat /etc/os-release | grep "^ID=")
        osname=${osid:3}
    elif [[ -d /System/iOSSupport ]]; then
        osname='macos'
    else
        osname='unknown'
    fi
    osname=$(echo $osname | awk '{print tolower($0)}' | awk '{ gsub(/ /,""); print }')
    printf $osname
}

# Print yellow header
function printhead() {
    bold='\e[1m'
    yellow='\e[33m'
    clear='\033[0m'
    output="\n${yellow}${bold}"$*"${clear}\n"
    printf "$output"
}